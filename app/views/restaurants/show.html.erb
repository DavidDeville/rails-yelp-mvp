<h1>Restaurant</h1>

<div class="restaurant">
  <ul>
    <li>Address : <%= @restaurant.address %></li>
    <li>Phone : <%= @restaurant.phone_number %></li>
    <li>Category : <%= @restaurant.category %></li>
  </ul>
</div>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
